<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/like_list_cafe_image"
        android:src="@drawable/new1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="cafe name"
        android:id="@+id/like_list_cafe_name"
        android:layout_alignTop="@+id/like_list_cafe_image"
        android:layout_toRightOf="@+id/like_list_cafe_image"
        android:layout_toEndOf="@+id/like_list_cafe_image"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="address"
        android:id="@+id/like_list_address"
        android:layout_below="@+id/like_list_cafe_name"
        android:layout_toRightOf="@+id/like_list_cafe_image"
        android:layout_toEndOf="@+id/like_list_cafe_image"
        android:layout_alignLeft="@+id/like_list_cafe_name"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/like_list_options_image"
        android:layout_below="@+id/like_list_address"
        android:layout_toRightOf="@+id/like_list_cafe_image"
        android:layout_toEndOf="@+id/like_list_cafe_image"
        android:src="@drawable/wifi"
        android:layout_alignLeft="@+id/like_list_cafe_name"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dislike"
        android:src="@drawable/reservationfail"
        android:layout_below="@+id/like_list_cafe_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

</RelativeLayout>