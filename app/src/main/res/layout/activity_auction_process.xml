<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/auction_process_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffffff"
            android:title="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="진행 중 경매"
            android:textColor="#420d03"
            android:textSize="20dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/auction_process_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/auction_process_title_nickname"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="고객 닉네임"
            android:textSize="@dimen/subject_text_size"
            android:textColor="@color/coffeejjim_brown"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/auction_process_title_description"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="견적 내용"
            android:textSize="@dimen/subject_text_size"
            android:textColor="@color/coffeejjim_brown"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/auction_process_title_end_time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="경매 마감"
            android:textSize="@dimen/subject_text_size"
            android:textColor="@color/coffeejjim_brown"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
