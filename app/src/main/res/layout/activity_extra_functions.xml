<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coffeejjim.developers.ExtraFunctionsActivity">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/extra_functions_estimate_btn"
        app:layout_row="0"
        app:layout_column="0"
        android:src="@drawable/activity_extra_estimete"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="fitXY"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/extra_functions_likelist_btn"
        app:layout_row="0"
        app:layout_column="1"
        android:src="@drawable/activity_extra_likelist"
        android:layout_alignTop="@+id/extra_functions_inguiry_btn"
        android:layout_toRightOf="@+id/extra_functions_estimate_btn"
        android:layout_toEndOf="@+id/extra_functions_estimate_btn"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:nestedScrollingEnabled="true"
        android:scaleType="fitXY"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/extra_functions_inguiry_btn"
        app:layout_row="0"
        app:layout_column="2"
        android:src="@drawable/activity_extra_inquiry"
        android:layout_above="@+id/extra_functions_logout_btn"
        android:layout_toRightOf="@+id/extra_functions_likelist_btn"
        android:layout_toEndOf="@+id/extra_functions_likelist_btn"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="fitXY"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/extra_functions_notification_btn"
        app:layout_row="1"
        app:layout_column="0"
        android:src="@drawable/activity_extra_notification"
        android:layout_below="@+id/extra_functions_estimate_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="fitXY"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/extra_functions_Settings_btn"
        app:layout_row="1"
        app:layout_column="1"
        android:src="@drawable/activity_extra_settings"
        android:layout_below="@+id/extra_functions_likelist_btn"
        android:layout_toRightOf="@+id/extra_functions_notification_btn"
        android:layout_toEndOf="@+id/extra_functions_notification_btn"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="fitXY"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/extra_functions_logout_btn"
        app:layout_row="1"
        app:layout_column="2"
        android:src="@drawable/activity_extra_logout"
        android:layout_below="@+id/extra_functions_estimate_btn"
        android:layout_toRightOf="@+id/extra_functions_likelist_btn"
        android:layout_toEndOf="@+id/extra_functions_likelist_btn"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="fitXY"
        android:background="#ffffff" />

</android.support.v7.widget.GridLayout>
