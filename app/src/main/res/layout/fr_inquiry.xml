<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".extrafunctions.inquiry.InquiryFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="coffee JJIM을 이용해주셔서 감사합니다."
        android:id="@+id/inquiry_content_text"
        android:layout_gravity="center"
        android:textSize="@dimen/small_text_size"
        android:layout_above="@+id/inquiry_content_text1"
        android:layout_alignLeft="@+id/inquiry_content_text1"
        android:layout_alignStart="@+id/inquiry_content_text1"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="문의사항은 coffeejjim@naver.com으로 주시면"
        android:id="@+id/inquiry_content_text1"
        android:textSize="@dimen/small_text_size"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/coffeejjim_red" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정성껏 답변 드리겟습니다. ^_^"
        android:id="@+id/inquiry_content_text3"
        android:textSize="@dimen/small_text_size"
        android:layout_below="@+id/inquiry_content_text1"
        android:layout_alignLeft="@+id/inquiry_content_text1"
        android:layout_alignStart="@+id/inquiry_content_text1"
        android:gravity="center"/>

</RelativeLayout>