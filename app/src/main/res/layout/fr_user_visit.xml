<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".owner.usermanagement.uservisitcount.UserVisitCountFragment"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/user_visit_count_user_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_visit_count_user_title_layout"
        android:orientation="horizontal"
        android:background="@color/coffeejjim_brown">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="닉네임"
            android:id="@+id/user_visit_count_user_nickname_text"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_side_margin"
            android:textColor="@color/coffeejjim_white"
            android:gravity="center"
            android:textSize="@dimen/subject_text_size" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="방문 수"
            android:id="@+id/user_visit_count_user_visit_count_text"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/coffeejjim_white"
            android:gravity="center"
            android:textSize="@dimen/subject_text_size" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="즐겨찾기 여부"
            android:id="@+id/user_visit_count_user_like_text"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/coffeejjim_white"
            android:layout_marginRight="@dimen/layout_side_margin"
            android:textSize="@dimen/subject_text_size" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_visit_count_user_title_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_visit_count_user_title_desc_layout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="닉네임"
            android:textColor="@color/coffeejjim_brown"
            android:id="@+id/user_visit_count_user_nickname"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_side_margin"
            android:gravity="center" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="1"
            android:textColor="@color/coffeejjim_brown"
            android:id="@+id/user_visit_count_user_visit_count"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/user_visit_count_user_like_image"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_likeempty"
            android:layout_marginRight="@dimen/layout_side_margin"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_visit_count_description_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_visit_count_description_title"
        android:orientation="horizontal"
        android:background="@color/coffeejjim_brown">

        <TextView
            android:id="@+id/user_visit_count_description_visit_date_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="방문날짜"
            android:textColor="@color/coffeejjim_white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/layout_side_margin"
            android:textSize="@dimen/subject_text_size" />

        <TextView
            android:id="@+id/user_visit_count_description_visit_time_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="방문시간"
            android:textColor="@color/coffeejjim_white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/subject_text_size" />

        <TextView
            android:id="@+id/user_visit_count_description_people_text"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="인원"
            android:textColor="@color/coffeejjim_white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/subject_text_size" />

        <TextView
            android:id="@+id/user_visit_count_description_price_text"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textColor="@color/coffeejjim_white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/layout_side_margin"
            android:textSize="@dimen/subject_text_size" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_visit_count_rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>
