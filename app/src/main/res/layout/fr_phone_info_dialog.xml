<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.coffeejjim.developers.login.PhoneInfoDialogFragment"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="최초 가입시 연락처를 입력해 주세요."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:textSize="@dimen/subject_text_size"
        android:layout_alignRight="@+id/fr_phone_info_edit"
        android:layout_alignEnd="@+id/fr_phone_info_edit"
        android:gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fr_phone_info_edit"
        tools:background="@drawable/xml_edit_text_box_line"
        android:layout_alignRight="@+id/fr_phone_info_send_btn"
        android:layout_alignEnd="@+id/fr_phone_info_send_btn"
        android:layout_marginTop="5dp" />

    <Button
        android:text="Canlce"
        android:layout_height="wrap_content"
        android:id="@+id/fr_phone_info_cancle_brn"
        android:background="@color/coffeejjim_invisible"
        android:layout_below="@+id/fr_phone_info_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_width="140dp" />

    <Button
        android:text="OK"
        android:layout_height="wrap_content"
        android:id="@+id/fr_phone_info_send_btn"
        android:background="@color/coffeejjim_invisible"
        android:textColor="@color/coffeejjim_red"
        android:layout_alignBaseline="@+id/fr_phone_info_cancle_brn"
        android:layout_alignBottom="@+id/fr_phone_info_cancle_brn"
        android:layout_toRightOf="@+id/fr_phone_info_cancle_brn"
        android:layout_toEndOf="@+id/fr_phone_info_cancle_brn"
        android:layout_width="140dp"
        android:layout_marginLeft="23dp" />
</RelativeLayout>
