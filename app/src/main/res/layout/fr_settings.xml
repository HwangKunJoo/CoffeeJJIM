<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".extrafunctions.settings.SettingsFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fr_settings_text_view_Size"
            android:text="버전정보"
            android:id="@+id/activity_settings_ver1_text"
            android:layout_weight="1"
            android:textSize="@dimen/subject_text_size"
            android:gravity="center|left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/layout_side_margin"
            android:textColor="@color/coffeejjim_brown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fr_settings_text_view_Size"
            android:text="v1.0"
            android:id="@+id/activity_settings_ver2_text"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/small_text_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/layout_side_margin"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="@dimen/fr_settings_text_view_Size"
            android:text="Push 알림"
            android:id="@+id/activity_settings_push_switch"
            android:layout_gravity="right"
            android:checked="false"
            android:textSize="@dimen/subject_text_size"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/layout_side_margin"
            android:layout_marginRight="@dimen/layout_side_margin"
            android:textColor="@color/coffeejjim_brown" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="@dimen/fr_settings_text_view_Size"
            android:text="소리"
            android:id="@+id/activity_settings_bell_switch"
            android:layout_gravity="right"
            android:checked="false"
            android:textSize="@dimen/subject_text_size"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/layout_side_margin"
            android:layout_marginRight="@dimen/layout_side_margin"
            android:textColor="@color/coffeejjim_brown" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="@dimen/fr_settings_text_view_Size"
            android:text="진동"
            android:id="@+id/activity_settings_vi_switch"
            android:layout_gravity="right"
            android:checked="false"
            android:textSize="@dimen/subject_text_size"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/layout_side_margin"
            android:layout_marginRight="@dimen/layout_side_margin"
            android:textColor="@color/coffeejjim_brown" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="역경매 허용 범위"
            android:id="@+id/activity_settings_distance_text"
            android:layout_weight="2"
            android:textSize="@dimen/subject_text_size"
            android:gravity="center|left"
            android:layout_marginLeft="16dp"
            android:textColor="@color/coffeejjim_brown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="반경"
            android:gravity="right|center"
            android:id="@+id/activity_settings_from_text"
            android:layout_weight="0.5"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textColor="@color/coffeejjim_brown" />

        <Spinner
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_settings_distance_spinner"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Km"
            android:id="@+id/activity_settings_to_text"
            android:textSize="13dp"
            android:layout_marginRight="@dimen/layout_side_margin"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="@color/coffeejjim_brown" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>

</LinearLayout>

