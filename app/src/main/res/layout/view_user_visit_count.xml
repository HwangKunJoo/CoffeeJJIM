<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/user_visit_count_description_visit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_user_visit_count_description_visit_date_margin"
        android:layout_marginStart="@dimen/view_user_visit_count_description_visit_date_margin"
        android:text="방문날짜"
        android:textColor="@color/coffeejjim_brown"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/user_visit_count_description_visit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_user_visit_count_description_visit_time_margin"
        android:layout_marginStart="@dimen/view_user_visit_count_description_visit_time_margin"
        android:text="방문시간"
        android:textColor="@color/coffeejjim_brown"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/user_visit_count_description_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_user_visit_count_description_people_margin"
        android:layout_marginStart="@dimen/view_user_visit_count_description_people_margin"
        android:text="인원"
        android:textColor="@color/coffeejjim_brown"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/user_visit_count_description_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_user_visit_count_description_price_margin"
        android:layout_marginStart="@dimen/view_user_visit_count_description_price_margin"
        android:text="가격"
        android:textColor="@color/coffeejjim_brown"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>

</LinearLayout>