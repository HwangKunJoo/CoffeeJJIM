<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cafedetail_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Cafe Tilte"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <android.support.v4.view.ViewPager
        android:id="@+id/cafe_detail_image_pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cafedetail_title_text"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/cafe_detail_preview_image_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/cafe_detail_image_pager"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cafe_detail_preview_image_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new1" />

        <ImageView
            android:id="@+id/cafe_detail_preview_image_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new2" />

        <ImageView
            android:id="@+id/cafe_detail_preview_image_top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new1" />

        <ImageView
            android:id="@+id/cafe_detail_preview_image_bottom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new3" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cafe_detail_preview_image_layout"
        android:layout_marginTop="20dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/cafedetail_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:text="address"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/cafedetail_dial_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/cafedetail_address_text"
            android:layout_below="@+id/cafedetail_address_text"
            android:layout_marginTop="15dp"
            android:text="dial"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/cafedetail_workingtime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/cafedetail_address_text"
            android:layout_below="@+id/cafedetail_dial_text"
            android:layout_marginTop="15dp"
            android:text="working time"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/cafedetail_options_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/cafedetail_address_text"
            android:layout_below="@+id/cafedetail_workingtime_text"
            android:layout_marginTop="15dp"
            android:text="options"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/cafe_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cafedetail_address_text"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/cafedetail_address_text"
            android:layout_toRightOf="@+id/cafedetail_address_text"
            android:text="서울시 관악구 봉천동"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/cafe_detail_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cafedetail_dial_text"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/cafedetail_dial_text"
            android:layout_toRightOf="@+id/cafedetail_dial_text"
            android:text="010-9374-4512"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/cafe_detail_working_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cafedetail_workingtime_text"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/cafedetail_workingtime_text"
            android:layout_toRightOf="@+id/cafedetail_workingtime_text"
            android:text="평일 - 09:00 ~ 21:00"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/cafe_detail_options_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cafe_detail_working_time"
            android:layout_alignStart="@+id/cafe_detail_working_time"
            android:layout_below="@+id/cafe_detail_working_time"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cafedetail_options_text"
            android:layout_toRightOf="@+id/cafedetail_options_text"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cafe_detail_options_wifi"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/wifi" />

            <ImageView
                android:id="@+id/cafe_detail_options_plag"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/plag"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>

            <ImageView
                android:id="@+id/cafe_detail_options_parking"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/parking"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>

            <ImageView
                android:id="@+id/cafe_detail_options_working_time"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/workingtime"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_move_map"
            android:layout_toRightOf="@+id/cafe_detail_address"
            android:layout_toEndOf="@+id/cafe_detail_address"
            android:layout_alignBottom="@+id/cafe_detail_address"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/maplocation"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_move_dial_pad"
            android:layout_toRightOf="@+id/cafe_detail_dial"
            android:layout_toEndOf="@+id/cafe_detail_dial"
            android:layout_alignBottom="@+id/cafe_detail_dial"
            android:layout_alignLeft="@+id/btn_move_map"
            android:background="@drawable/telephone"/>

    </RelativeLayout>



</RelativeLayout>