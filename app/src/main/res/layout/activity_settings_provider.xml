<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".extrafunctions.settings.SettingsActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/under_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="버전정보"
            android:id="@+id/activity_settings_provider_ver1_text"
            android:layout_weight="1"
            android:textSize="18dp"
            android:gravity="center|left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="v1.0"
            android:id="@+id/activity_settings_provider_ver2_text"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/under_line">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Puch 알림"
            android:id="@+id/activity_settings_provider_puch_switch"
            android:layout_gravity="right"
            android:checked="false"
            android:textSize="18dp"
            android:gravity="center|left"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/under_line">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="소리"
            android:id="@+id/activity_settings_provider_bell_switch"
            android:layout_gravity="right"
            android:checked="false"
            android:textSize="18dp"
            android:gravity="center|left"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/under_line">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="진동"
            android:id="@+id/activity_settings_provider_vi_switch"
            android:layout_gravity="right"
            android:checked="false"
            android:textSize="18dp"
            android:gravity="center|left"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/under_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="역경매 허용 범위"
            android:id="@+id/activity_settings_provider_distance_text"
            android:layout_weight="2"
            android:textSize="18dp"
            android:gravity="center|left"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="반경"
            android:gravity="right|center"
            android:id="@+id/activity_settings_provider_from_text"
            android:layout_weight="0.5"
            android:textSize="13dp"
            android:layout_gravity="center"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_settings_provider_distance_spinner"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="이내"
            android:id="@+id/activity_settings_provider_to_text"
            android:layout_weight="0.5"
            android:textSize="13dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            android:gravity="center|left"/>
    </LinearLayout>

</LinearLayout>

