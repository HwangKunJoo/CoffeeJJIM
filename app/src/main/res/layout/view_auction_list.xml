<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_width="@dimen/view_auction_list_image_Size"
            android:layout_height="@dimen/view_auction_list_image_Size"
            android:id="@+id/auction_list_reservation_fail_image"
            android:src="@android:drawable/ic_delete"
            android:layout_alignTop="@+id/auctionlist_cafe_title_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/view_auction_list_maginRight"
            android:layout_marginLeft="@dimen/layout_side_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="11:11"
            android:textSize="@dimen/subject_text_size"
            android:id="@+id/auctionlist_time_text"
            android:layout_alignBottom="@+id/auctionlist_cafe_title_text"
            android:layout_toRightOf="@+id/auction_list_reservation_fail_image"
            android:layout_toEndOf="@+id/auction_list_reservation_fail_image"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/view_auction_list_maginRight"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="철수"
                android:textSize="@dimen/subject_text_size"
                android:id="@+id/auctionlist_cafe_title_text"
                android:layout_alignTop="@+id/auctionlist_present_btn"
                android:layout_alignLeft="@+id/auctionlist_person_text"
                android:layout_alignStart="@+id/auctionlist_person_text"
                android:layout_gravity="center|left"
                android:gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울시 봉천구"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/auctionlist_cafe_address_text"
                android:layout_gravity="center|left"
                android:gravity="left" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13,000"
            android:textSize="@dimen/small_text_size"
            android:id="@+id/auctionlist_price_text"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:id="@+id/textView"
            android:textSize="@dimen/small_text_size"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginRight="@dimen/view_auction_list_maginRight"/>

        <Button
            android:layout_width="@dimen/view_auction_list_button_raw_Size"
            android:layout_height="@dimen/view_auction_list_button_column_Size"
            android:id="@+id/auctionlist_present_btn"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/view_auction_list_estimate_btn"
            android:layout_marginRight="@dimen/layout_side_margin"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_300" />
    </LinearLayout>
</LinearLayout>