<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".extrafunctions.auctionlist.AuctionListFragment">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/auction_list_calendarView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="#00F"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/auction_list_calendarView"
        android:id="@+id/auction_rv_list"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
