<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coffeejjim.developers.SignupFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="name"
            android:id="@+id/signup_name_text"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ID"
            android:id="@+id/signup_id_text"
            android:layout_below="@+id/signup_name_text"
            android:layout_alignRight="@+id/signup_name_text"
            android:layout_alignEnd="@+id/signup_name_text"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Password"
            android:id="@+id/signup_password_text"
            android:layout_below="@+id/signup_id_text"
            android:layout_toLeftOf="@+id/signup_name_edit"
            android:layout_toStartOf="@+id/signup_name_edit"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="passcheck"
            android:id="@+id/signup_passcheck_text"
            android:layout_below="@+id/signup_password_text"
            android:layout_toLeftOf="@+id/signup_name_edit"
            android:layout_toStartOf="@+id/signup_name_edit"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-"
            android:id="@+id/textView11"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/signup_phone1_edit"
            android:layout_toRightOf="@+id/signup_phone1_edit"
            android:layout_toEndOf="@+id/signup_phone1_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-"
            android:id="@+id/textView12"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/signup_phone2_edit"
            android:layout_toRightOf="@+id/signup_phone2_edit"
            android:layout_toEndOf="@+id/signup_phone2_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Phone"
            android:id="@+id/signup_phone_text"
            android:layout_below="@+id/signup_passcheck_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email"
            android:id="@+id/signup_email_text"
            android:layout_below="@+id/signup_phone_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_name_edit"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/signup_name_text"
            android:layout_toEndOf="@+id/signup_name_text"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_id_edit"
            android:layout_below="@+id/signup_name_edit"
            android:layout_alignLeft="@+id/signup_name_edit"
            android:layout_alignStart="@+id/signup_name_edit" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_password_edit"
            android:layout_below="@+id/signup_id_edit"
            android:layout_alignLeft="@+id/signup_id_edit"
            android:layout_alignStart="@+id/signup_id_edit" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_passcheck_edit"
            android:layout_below="@+id/signup_password_edit"
            android:layout_alignLeft="@+id/signup_password_edit"
            android:layout_alignStart="@+id/signup_password_edit" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_phone1_edit"
            android:layout_below="@+id/signup_passcheck_edit"
            android:layout_alignLeft="@+id/signup_name_text"
            android:layout_alignStart="@+id/signup_name_text" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_phone2_edit"
            android:layout_below="@+id/signup_passcheck_edit"
            android:layout_toRightOf="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_phone3_edit"
            android:layout_below="@+id/signup_passcheck_edit"
            android:layout_toRightOf="@+id/textView12"
            android:layout_toEndOf="@+id/textView12" />

        <EditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_email_edit"
            android:layout_below="@+id/signup_phone1_edit"
            android:layout_alignLeft="@+id/signup_phone1_edit"
            android:layout_alignStart="@+id/signup_phone1_edit" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="1.2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cafe information"
            android:id="@+id/signup_cafeinfo_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="cafe title"
            android:id="@+id/signup_cafetitle_text"
            android:layout_below="@+id/signup_cafeinfo_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="address"
            android:id="@+id/signup_address_text"
            android:layout_below="@+id/signup_cafetitle_text"
            android:layout_toLeftOf="@+id/signup_cafetitle_edit"
            android:layout_toStartOf="@+id/signup_cafetitle_edit"
            android:layout_marginTop="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="phone"
            android:id="@+id/signup_cafephone_text"
            android:layout_below="@+id/signup_address_text"
            android:layout_toLeftOf="@+id/signup_cafetitle_edit"
            android:layout_toStartOf="@+id/signup_cafetitle_edit"
            android:layout_marginTop="22dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_cafetitle_edit"
            android:layout_toRightOf="@+id/signup_cafetitle_text"
            android:layout_toEndOf="@+id/signup_cafetitle_text"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_address_edit"
            android:layout_below="@+id/signup_cafetitle_edit"
            android:layout_alignLeft="@+id/signup_cafetitle_edit"
            android:layout_alignStart="@+id/signup_cafetitle_edit" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_cafephone_edit"
            android:layout_below="@+id/signup_address_edit"
            android:layout_alignLeft="@+id/signup_address_edit"
            android:layout_alignStart="@+id/signup_address_edit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="joinus"
            android:id="@+id/signup_join_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
