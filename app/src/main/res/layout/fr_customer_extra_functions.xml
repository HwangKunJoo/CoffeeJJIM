<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    tools:context=".extrafunctions.CustomerExtraFunctionsFragment">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_customer_extra_functions_auction_statement"
        app:layout_row="0"
        app:layout_column="0"
        android:src="@drawable/extra_customer_image_btn1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:background="@color/coffeejjim_white" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_customer_extra_functions_like_list"
        app:layout_row="0"
        app:layout_column="1"
        android:src="@drawable/extra_customer_image_btn2"
        android:layout_alignTop="@+id/btn_customer_extra_functions_inquiry"
        android:layout_toRightOf="@+id/btn_customer_extra_functions_auction_statement"
        android:layout_toEndOf="@+id/btn_customer_extra_functions_auction_statement"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_customer_extra_functions_inquiry"
        app:layout_row="0"
        app:layout_column="2"
        android:src="@drawable/extra_customer_image_btn3"
        android:layout_above="@+id/btn_customer_extra_functions_logout"
        android:layout_toRightOf="@+id/btn_customer_extra_functions_like_list"
        android:layout_toEndOf="@+id/btn_customer_extra_functions_like_list"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_customer_extra_functions_notification"
        app:layout_row="1"
        app:layout_column="0"
        android:src="@drawable/extra_customer_image_btn4"
        android:layout_below="@+id/btn_customer_extra_functions_auction_statement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_customer_extra_functions_settings"
        app:layout_row="1"
        app:layout_column="1"
        android:src="@drawable/extra_customer_image_btn5"
        android:layout_below="@+id/btn_customer_extra_functions_like_list"
        android:layout_toRightOf="@+id/btn_customer_extra_functions_notification"
        android:layout_toEndOf="@+id/btn_customer_extra_functions_notification"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_customer_extra_functions_logout"
        app:layout_row="1"
        app:layout_column="2"
        android:src="@drawable/extra_customer_image_btn6"
        android:layout_below="@+id/btn_customer_extra_functions_auction_statement"
        android:layout_toRightOf="@+id/btn_customer_extra_functions_like_list"
        android:layout_toEndOf="@+id/btn_customer_extra_functions_like_list"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:background="#ffffff" />

</android.support.v7.widget.GridLayout>
