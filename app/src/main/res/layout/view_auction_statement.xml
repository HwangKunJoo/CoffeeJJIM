<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/under_line">

    <ImageView
        android:layout_width="@dimen/view_auction_list_image_Size"
        android:layout_height="@dimen/view_auction_list_image_Size"
        android:id="@+id/auction_statement_reservation_fail_image"
        android:src="@android:drawable/ic_lock_power_off"
        android:layout_weight="1"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="11:11"
        android:textSize="@dimen/subject_text_size"
        android:id="@+id/auction_statement_time"
        android:layout_weight="1"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User A"
        android:textSize="@dimen/subject_text_size"
        android:id="@+id/auction_statement_user_nickname"
        android:layout_weight="1"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2"
        android:textSize="@dimen/subject_text_size"
        android:id="@+id/auction_statement_people"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명"
        android:textSize="@dimen/subject_text_size"
        android:id="@+id/auction_statement_people1"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="13,000"
        android:textSize="@dimen/subject_text_size"
        android:id="@+id/auction_statement_price"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textSize="@dimen/subject_text_size"
        android:id="@+id/auction_statement_price1"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="left"/>

    <Button
        android:layout_width="@dimen/view_auction_list_button_raw_Size"
        android:layout_height="@dimen/view_auction_list_button_column_Size"
        android:id="@+id/btn_reservation_booking_info"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/view_auction_list_btn" />

</LinearLayout>
